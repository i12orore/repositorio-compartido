//Borrar por DNI
void Agenda::borrar(Contacto _contactos,string dni)
{
	int encontrado=0;
	int i;
	for(i=0;i<_contactos.size();i++)
	{
		if(( dni==_contactos._dni)&&(encontrado==0))
		{
			
			_contactos.erase(i);
			encontrado=1;

		}
	}
	
}
